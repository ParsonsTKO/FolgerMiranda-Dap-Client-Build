raw-ul()
  margin: 0
  padding: 0

raw-li()
  list-style: none
  margin: 0
  padding: 0

raw-a()
  color: inherit
  text-decoration: none

raw-input()
  size(auto, auto)
  margin: 0
  padding: 0
  vendorize(appearance, none)
  border: 0
  box-shadow: none
  outline: none
  color: inherit
  background-color: transparent
  border-radius: 0
  line-height: 1
  &:focus
    box-shadow: none
    background-color: transparent

raw-button()
  size(auto, auto)
  margin: 0
  padding: 0
  vendorize(appearance, none)
  border: 0
  box-shadow: none
  outline: none
  color: inherit
  line-height: 1
  background-color: transparent
  border-radius: 0

clearfix()
  &:before,
  &:after
    clear: both
    content: " "
    display: table

font-smoothing()
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  text-rendering: optimizeLegibility

click-effect-a()
  &:active
    opacity: .68

placeholder()
  ::-webkit-input-placeholder
    {block}

  ::-moz-placeholder
    {block}

  :-ms-input-placeholder
    {block}

  :-moz-placeholder
    {block}

scrollable-y()
  overflow-y: scroll
  -webkit-overflow-scrolling: touch

vendorize($property, $value)
  -ms-{$property}: $value
  -moz-{$property}: $value
  -webkit-{$property}: $value

debug($color = black)
  *,
  * *,
  * * *,
  * * * *,
  * * * * *
    background-color: rgba($color, .10)

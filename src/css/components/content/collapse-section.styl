.collapse-section
	color: white
	&--toggle
		display: inline-block
		padding: rem(10)
		margin-bottom: rem(50)
		font-size: rem(20)
		letter-spacing: 2px
		cursor: pointer
		color: inherit
		&:hover,
		&:focus
			text-decoration: none 
			color: white
		
		&-icon
			display: block
			size(rem(16), rem(10))
			margin: 0 auto
			margin-top: rem(19)
			--color-icon: white

	&--panel
		padding: rem(10) 0
		margin-bottom: rem(60)

.related-articles
  &__title
    font-size: em(35)
    margin-bottom: em(35, 35)

  &__links
    +media-tablet()
      display flex
      justify-content: space-between
      align-items: stretch
      margin: 0 25%
    > *
      display flex
      width: 100%
      margin-bottom: em(15)
      +media-tablet()
        flex-grow 1
        display inline-flex
        padding: em(30, 22) em(15, 22) !important
        margin-right: em(30)
        &:last-child
          margin-right: 0

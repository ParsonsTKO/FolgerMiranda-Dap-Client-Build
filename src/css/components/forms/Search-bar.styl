.search-bar
	$fs = 22
	centered(rem(890))
	font-size: 1em

	+media-tablet()
		font-size: em($fs)

	&__inner
		display: flex
		align-items: stretch
		margin-bottom: rem(10)
		border: 1px solid $color-border
		box-shadow: 0 0 rem(9) 0 rgba(black, .5)

	&__format,
	&__input
		raw-input()
		flex-grow 1
		margin: 0 !important
		padding: em(20, $fs) em(15, $fs)
		font-size: inherit
		background-color white !important
		color: $color-base
		&::placeholder
			line-height 1
		+media-tablet()
			padding: em(20, $fs) em(30, $fs)

	&__format
		width: 32.5%
		padding-right: em(40, 22)
		border-right: 1px solid $color-border
		font-weight 700

	&__input
		transition: width .21s ease-out
		width: 59%
		&::placeholder
			font-weight: normal
			color: inherit
		&:focus
			width: 80%


	&__submit
		@extends .button
		@extends .button.is-secondary
		flex-shrink: 0
		padding 0
		text-align center
		width rem(50)
		+media-tablet()
			width rem(75)
		svg
			--color-icon: white
			size(rem(24), rem(24))
			display inline-block
			margin-right 0

	&__small
		font-size: rem(16)
		color:  inherit
		&:hover,
		&:focus
			color: inherit
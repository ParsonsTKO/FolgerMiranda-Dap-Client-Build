.link-see-all
  display: inline-flex
  align-items: center
  margin: 0 0 rem(8) rem(30)
  color: inherit
  &:hover,
  &:focus
    color: inherit 
    text-decoration: none 

  &__icon
    size(12px, 12px)
    margin-right: rem(10)
    --color-icon: black
  
  &__label
    font-size: rem(14)
    font-weight: bold
    text-transform: uppercase

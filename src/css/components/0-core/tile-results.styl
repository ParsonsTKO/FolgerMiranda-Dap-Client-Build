.tile-results
  display: flex
  flex-direction: column
  &__header
    display: flex
    justify-content: space-between
    margin-bottom: rem(30)
  
  &__count
    font-size: rem(24)
    font-weight: 600

  &__actions-display
    display: flex
    align-items: center
  
  &__action-display
    raw-button()
    justify-content: center
    align-items: center 
    display: flex
    margin-right: rem(15)
    &:focus
      outline: none !important
    svg
      size(20px, 20px)
      --color-icon: $color-border
    &.is-active
      svg
        --color-icon: black
  
  &__selector-number-items
    raw-input()
    padding: rem(5)
    padding-right: rem(27)
    margin-left:rem(10)
    font-size: rem(14)
    font-weight: 600
    background-image: url("data:image/svg+xml,%3Csvg width='16' height='10' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M16 1.88l-8 8-8-8L1.88 0 8 6.107 14.12 0z' fill='%239B9B9B' fill-rule='nonzero'/%3E%3C/svg%3E");
    background-repeat no-repeat
    background-position right em(10, 14) center
    background-size 6px 4px
    cursor: pointer


  &__content
    display: flex
    flex-direction: column
  
  &__featured
    display: block
    margin-bottom: rem(21)
    &-label
      margin-bottom: rem(13)
      font-size: rem(14)
      font-weight: 600

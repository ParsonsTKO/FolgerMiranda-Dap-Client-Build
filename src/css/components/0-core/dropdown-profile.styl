.dropdown-profile
  background-color: transparent
  color: inherit
  &__toggle
    display: flex
    align-items: center
    padding: 0
    font-weight: 700
    font-size: rem(18)
    background-color: transparent
    color: inherit
    letter-spacing: 1px
    &:focus
      box-shadow: none
    &:after
      display: none
    svg
      --color-icon: inherit
    
  &__menu
    min-width: 100%
    background-color: rgba(black, 1)
    color: inherit 
    a
      color: inherit 
      font-size: em($font-size-base)
      &:hover
        background-color: rgba(white, .1)
        color: inherit

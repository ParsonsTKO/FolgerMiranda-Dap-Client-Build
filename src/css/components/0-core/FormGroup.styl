@require 'Label'
@require 'Title'

.FormGroup
  display: block

  &-name
    display: inline-block
    margin-bottom 0 rem(10) 0 0
    font-size: 12px
    text-transform: uppercase
    letter-spacing: 1px
    font-weight: 600

  &-field
    display: inline-block

  &__timeRange
    position: relative
    margin-bottom: rem(15)

    & ^[0]
      &-label
        @extend .Title
        @extend .Title__primary
        display: inline-block
        text-align: right
        margin: 0 rem(10) 0 0

      &-fieldset
        position: relative
        display: inline-block
        margin-right: rem(15)
        &:last-child
          margin-right: 0

        label
          @extend .Label
          text-align: left
          margin-bottom: rem(9)

        hr
          absolute(null, rem(-20), -7%)
          size(rem(20), 1px)
          display: block
          border: 0
          background-color: $color-border

        &.Fieldset__tiny
          margin-right: rem(0)

      &-field
        raw-input()
        size(rem(80), rem(34))
        display: inline-block
        background: white
        border: 1px solid $color-border
        font-size: rem(18)
        border-radius: 2px
        text-align: center

        &.Field__tiny
          size(rem(80), auto)

  &__block
    & ^[0]
      &-label
        @extend .Title
        @extend .Title__primary
        margin-bottom: rem(10)

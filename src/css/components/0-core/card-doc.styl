.card-record
	display: flex
	flex-direction: column
	padding: rem(30)
	width: 100%
	background-color: $color-neutral-b
	
	&__heading
		display: flex
		padding-bottom: rem(21)
		margin-bottom: rem(15)
		border-bottom: 2px solid $color-border-secondary
		&-icon
			size(24px, 24px)
			flex-shrink: 0
			margin-right: rem(17)
		
		&-image
			flex-shrink: 0
			margin-right: rem(13)
			img
				size(auto, auto, 100%, 100%, 1000%, 1000%)

	&__title
		margin-bottom: 0 !important
		font-family: $font-family-base
		font-size: rem(18)
		font-weight: bold
		line-height: 1.3

	&__body
		display: flex
		flex-direction: column
	
	&__description
		display: flex
		flex-direction: column
	&__metadata
		display: block
		&-label,
		&-value
			display: block
			font-size: rem(16)

		&-label
			margin-bottom: rem(4)
			font-weight: 600
		&-value
			margin-bottom: rem(7)
	
	&__actions
		display: flex
		flex-wrap: wrap

	&__action
		display: flex
		align-items: center
		flex-shrink: 0
		margin-right: rem(19)
		font-weight: bold
		color: $color-secondary
		&:focus
			color: $color-secondary
		svg	
			size(rem(13), rem(13))
			margin-left: rem(10)
			--color-icon: $color-secondary









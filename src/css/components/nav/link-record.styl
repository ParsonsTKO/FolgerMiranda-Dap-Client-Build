.link-record
  width: 100%
  display flex
  flex-direction column
  align-items: center
  justify-content: center
  padding: em(30)
  border: 2px solid $color-secondary;
  border-radius: em(5)
  text-decoration none
  text-align center
  transition: all .21s ease
  color: $color-secondary
  &:hover
    text-decoration none
    background-color $color-secondary
    color: white

  &__title
    display block
    margin-bottom: em(5)
    font-size: em(20);
    font-weight bold
  
  &__content
    display block
    font-size: em(18);

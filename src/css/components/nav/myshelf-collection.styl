.myshelf-collection
  absolute(100%, 0)
  width: rem(524)
  padding: 0
  background: white
  box-shadow: 0 7px 14px 0 rgba(0, 0 , 0, .22)
  border-radius: 2px
  z-index: 700
  max-width: 100vw
  visibility hidden
  opacity 0
  transition all .21s ease-in-out
  transform translateY(-7px)
  &.is-active
    opacity 1
    visibility visible
    transform translateY(0)
  & p
    margin: 1em
    color: black
  & ul
    list-style-type: none
    padding: 0.5em
    & li
      a
        color: $color-primary !important
        font-size: 16px !important
      &.wipeCollection
         text-align: center
         margin-bottom: rem(0)
         padding-bottom: rem(0)

  &::before
    absolute(rem(-9), rem(15))
    content: ''
    border-right: rem(10) solid transparent
    border-left: rem(10) solid transparent
    border-bottom: rem(10) solid white

  &-header
    padding: rem(14) rem(14) rem(10)
    margin: 0

  &-main
    background-color: $color-neutral-a

  &-title
    display: inline-block
    color: #4A4A4A
    font-size: rem(20)
    &::before
      @extend .icon
      content: icon-star
      display: inline-block
      padding: rem(10)

  &-warning
    float: right
    padding: rem(13) rem(15)
    font-weight: 600
    font-size: 12px
    text-align: center
    background-color: $color-primary
    border-radius: 60px
    color: white
    font-weight: bold

    &::before
      @extend .icon
      content: icon-warning
      position: relative
      margin-right: rem(2)
      vertical-align: middle
      display: inline-block
      font-size: rem(19)

  &-actions
    background-color: $color-neutral-a
    padding: rem(12)
    > *
      font-size: rem(22)
      font-weight: normal
      i
        font-size: rem(26)
        vertical-align: middle
        margin-right: rem(15)

    button
      width: 100%

.ContentSlider
  display: block
  background-color: $color-neutral-b
  padding: rem(83) 0 rem(133) rem(112)
  overflow: hidden

  &-title
    display: block
    font-size: rem(20)
    margin-bottom: rem(28)

  &-items
    size(100%)
    clearfix()
    display: block

  &-item
    size(rem(502))
    margin: 0 rem(20) rem(20) 0
    display: block
    float: left

  &__records
    display: block
    & ^[0]
      &-item
        line-height: 1.3
        display: table
        img
          width: 200px
          max-width: initial
          display: table-cell
          vertical-align: top
          margin-right: rem(20)
        figcaption
          width: 100%
          display: table-cell
          vertical-align: top
      &-itemSummary
        max-width: rem(240)
        font-size: rem(14)
      &-itemMetadata
        font-size: rem(13)
        opacity: .62
        label
          margin: 0

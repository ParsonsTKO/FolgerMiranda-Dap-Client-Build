.Aside
  display: block

  &__single
    // absolute(null, 0)
    // float: left
    display: table-cell
    width: rem(460)
    padding: 0
    background-color: white
    overflow: hidden
    border: 1px solid $color-border
    box-shadow: -1px 2px 4px 0 rgba(black, .15)

    +device-large('smaller')
      display: block
      width: 100vw

    & ^[0]-nav
      clearfix()
      raw-list()
      display: table
      width: 100%
      &Item
        // size((100 / 3) * 1%)
        display: table-cell
        // float: left
        text-align: center
        border: 1px solid $color-border
        border-right: 0
        border-top: 0
        &:first-child
          border-left: 0
        a
          display: block
          padding: rem(15)
          text-decoration: none
          color: inherit
          &:before
            @extend .icon
            font-size: rem(20)
            margin-right: 5px
            vertical-align: middle
        .collection-star
          background-color: white
          color: $color-primary

        &__add
          a:before
            content: icon-star-outline
        &__bookReader
          a:before
            content: icon-book
        &__download
          a:before
            content: icon-download

    & ^[0]
      &-main
        padding: rem(33) rem(20) rem(40) rem(37)
        p
          margin-bottom: 1.62em

      &-footer
        &Actions
          margin: rem(10) 0 rem(20)
          text-align: center

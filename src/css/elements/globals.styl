*
  outline none
  box-sizing: border-box
  font-smoothing()
  &:active,
  &:focus
    outline none !important

html,
body
  font-size: $font-size-base - 4 * 1px
  +media-mobile-m()
    font-size: $font-size-base - 3 * 1px
  +media-mobile-l()
    font-size: $font-size-base - 2 * 1px
  +media-tablet()
    font-size: $font-size-base - 1 * 1px
  +media-laptop()
    font-size: $font-size-base * 1px


body
  margin: 0
  padding: 0
  color: $color-base
  background-color: white
  font-family: $font-family-base
  font-weight: normal
  line-height: 1.38
  max-width: 100vw
  overflow-x: hidden

h1,
h2,
h3,
h4,
h5,
h6
  font-family $font-family-display
  font-weight: 400
  margin: 0 0 .38em
  line-height: 1.38

  p + &
    padding-top: .38em

h1
  font-size: rem(30)

h2
  font-size: rem(28)

h3
  font-size: rem(24)

h4
  font-size: rem(21)

h5
  font-size: rem(18)

h6
  font-size: rem(16)

a
  click-effect-a()
  color: $color-secondary
  &:hover
    color: lighten($color-secondary, 21%)
    text-decoration: underline

p
  margin: 0 0 1em
  line-height: inherit

ul,
ol
  clearfix()
  line-height: inherit
  margin-bottom: 1em

ul li
  margin-bottom: .62em

button,
input,
textarea,
select
  margin: 0
  font-family: $font-family-base
  box-shadow: 0
  outline: none
  border-radius: 2px
  transition all .21s ease

+placeholder()
  line-height: 1.38

input[type='text'],
input[type='email'],
input[type='password'],
input[type='search'],
input[type='phone'],
input[type='number'],
input[type='file'],
select,
textarea
  margin-bottom: 0

textarea
  height: 7em

button,
input[type='submit'],
input[type='button'],
input[type='reset']
  click-effect-a()
  cursor: pointer
  &.btn-search
   background-color: $color-primary
  &:active
    color: inherit

label
  color: inherit
  font-size: inherit
  background-color: transparent
  font-weight: inherit
  white-space: inherit
  line-height: inherit
  margin: 0
  cursor: inherit

img
  max-width: 100%
  & + h1,
  & + h2,
  & + h3,
  & + h4,
  & + h5,
  & + h6
    margin-top: 1em

figure
  figcaption
    margin-top: 1em
    font-style: italic
  & + p
    margin-top: 2rem

strong,
b
  font-weight: bold

hr
  border-top-width: 2px
